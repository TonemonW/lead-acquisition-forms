{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "lib": [
      "es2020"
    ],
    "types": [
      "node"
    ],
    "allowJs": true
  },
  "compileOnSave": true,
  "include": [
    "src",
    "types/**/*.js",
    "types/**/*.d.ts"
  ]
}